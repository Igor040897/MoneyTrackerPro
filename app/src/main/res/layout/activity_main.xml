<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/nullDP"
        android:paddingLeft="11.5dp"
        android:paddingTop="@dimen/nullDP"
        android:paddingBottom="@dimen/nullDP"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">


        <EditText
            android:id="@+id/name"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:inputType="text"
            android:layout_weight="1"
            android:layout_width="@dimen/nullDP"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            android:textStyle="normal"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_smallSizeSP" />

        <EditText
            android:id="@+id/price"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textStyle="normal"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/text_smallSizeSP"
            android:textDirection="rtl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency"
            android:textColor="@color/colorLightGray"
            android:textSize="@dimen/text_smallSizeSP" />

        <TextView
            android:id="@+id/add"
            android:enabled="false"
            android:textSize="40sp"
            android:paddingStart="@dimen/margin_l"
            android:paddingEnd="@dimen/margin_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</FrameLayout>
